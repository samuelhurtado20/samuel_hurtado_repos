// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id_organization Int     @id @default(autoincrement())
  name            String
  status          Int
  Tribe           Tribe[]
}

model Tribe {
  id_tribe        Int          @id @default(autoincrement())
  name            String
  status          Int
  organization    Organization @relation(fields: [id_organization], references: [id_organization])
  id_organization Int
}
