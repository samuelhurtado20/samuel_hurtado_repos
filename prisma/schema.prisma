// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id_organization BigInt  @id @default(autoincrement()) @db.BigInt
  name            String
  status          Int
  Tribe           Tribe[]
}

model Tribe {
  id_tribe        BigInt       @id @default(autoincrement()) @db.BigInt
  name            String
  status          Int
  Organization    Organization @relation(fields: [id_organization], references: [id_organization])
  id_organization BigInt
  Repository      Repository[]
}

model Repository {
  id_repository BigInt   @id @default(autoincrement()) @db.BigInt
  name          String
  state         String   @db.Char(1)
  create_time   DateTime @default(now())
  status        Int
  Tribe         Tribe    @relation(fields: [id_tribe], references: [id_tribe])
  id_tribe      BigInt
  Metric        Metric?
}

model Metric {
  id_repository   BigInt     @id @unique @db.BigInt
  Repository      Repository @relation(fields: [id_repository], references: [id_repository])
  coverage        Float      @db.DoublePrecision
  bugs            Int
  vulnerabilities Int
  hotspot         Int
  code_smells     Int
}
